{
  "exclude": ["node_modules"],
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "outDir": "dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", 
    "paths": {
      "@/*": ["*"],
      "@ui/*": ["../../packages/ui/src/*"]
